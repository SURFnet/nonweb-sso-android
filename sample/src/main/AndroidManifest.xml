<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="nl.surfnet.nonweb.sso.sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--Add the SSOService to handle the request-->
        <activity
            android:name="nl.surfnet.nonweb.sso.SSOService"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <!--Add the schema and host key-->
                <data
                    android:host="sf4dca00da67c692296690e90c50c96b79"
                    android:scheme="sfoauth"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
