<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:keepScreenOn="true"
                tools:context="nl.surfnet.nonweb.sso.demo.MainActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/giant_logo"/>

    <Button
        android:id="@+id/login"
        fontPath="fonts/Roboto-Black.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:paddingTop="12dp"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="@string/login"
        android:textColor="@color/textColor"
        android:textSize="64sp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/token"
        fontPath="fonts/RobotoMono-Medium.ttf"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_below="@+id/token_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@android:color/white"
        android:gravity="center"
        tools:text="bfc25b8bcdeb9e37998e0cc1aedba685"
        android:textColor="#202020"
        android:textSize="28sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/token_label"
        fontPath="fonts/Roboto-Light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/token_label"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="12dp"
        android:text="@string/token_label"
        android:textColor="@color/textColor"
        android:textSize="60sp"
        android:visibility="gone"
        />


</RelativeLayout>
